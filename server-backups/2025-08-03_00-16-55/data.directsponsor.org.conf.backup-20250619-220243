server {
    server_name data.directsponsor.org;
    root /var/www/data.directsponsor.org/public_html;
    index index.php index.html;

    # Security headers
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options DENY always;
    add_header X-XSS-Protection "1; mode=block" always;

    # API endpoints
    location ~ ^/api/(profile|balance|vote)/?$ {
        try_files $uri $uri.php =404;
        include fastcgi.conf;
        fastcgi_pass unix:/run/php-fpm/www.sock;
        
        # CORS headers
        add_header 'Access-Control-Allow-Origin' '*' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type' always;
    }
    
    # Avatar uploads
    location /uploads/ {
        expires 1y;
        add_header Cache-Control "public";
    }

    # Handle OPTIONS requests
    location / {
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type';
            return 200;
        }
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/data.directsponsor.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/data.directsponsor.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = data.directsponsor.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name data.directsponsor.org;

    listen 80;
    return 404; # managed by Certbot


}