# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=roflfaucet
DB_USER=faucet_user
DB_PASSWORD=secure_password

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Useless Token Configuration
TOKEN_NAME=UselessToken
TOKEN_SYMBOL=USELESS
TOKEN_DECIMALS=0

# Faucet Settings
FAUCET_AMOUNT_TOKENS=50
FAUCET_TIMER_MINUTES=60
MAX_CLAIMS_PER_DAY=24
BONUS_MULTIPLIER_MAX=2.0
STREAK_BONUS_ENABLED=true

# Anti-bot Protection
CAPTCHA_SITE_KEY=your_recaptcha_site_key
CAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Domain Configuration
PRODUCTION_DOMAIN=roflfaucet.com
STAGING_DOMAIN=staging.roflfaucet.com
DEVELOPMENT_DOMAIN=localhost:3000

# Integration with Main Platform
MAIN_PLATFORM_API_URL=https://api.clickforcharity.net
MAIN_PLATFORM_API_KEY=your_api_key
MAIN_PLATFORM_CALLBACK_URL=https://roflfaucet.com/auth/callback

# Useless Token Integration
USELESS_TOKEN_REWARD=10
USELESS_TOKEN_BONUS_MULTIPLIER=1.5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/roflfaucet.log

