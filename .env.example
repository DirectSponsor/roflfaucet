# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=roflfaucet
DB_USER=faucet_user
DB_PASSWORD=secure_password

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Bitcoin/Lightning Configuration
BTC_NETWORK=testnet
LIGHTNING_NODE_URL=http://localhost:8080
LIGHTNING_MACAROON_PATH=/path/to/admin.macaroon
LIGHTNING_TLS_CERT_PATH=/path/to/tls.cert

# Faucet Settings
FAUCET_AMOUNT_SATOSHIS=100
FAUCET_TIMER_MINUTES=60
MAX_CLAIMS_PER_DAY=24

# Anti-bot Protection
CAPTCHA_SITE_KEY=your_recaptcha_site_key
CAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Integration with Main Platform
MAIN_PLATFORM_API_URL=https://api.clickforcharity.net
MAIN_PLATFORM_API_KEY=your_api_key

# Useless Token Integration
USELESS_TOKEN_REWARD=10
USELESS_TOKEN_BONUS_MULTIPLIER=1.5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/roflfaucet.log

