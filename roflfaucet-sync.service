[Unit]
Description=ROFLFaucet Balance Sync Daemon
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/root
ExecStart=/root/sync-daemon.sh
Restart=always
RestartSec=10
StandardOutput=append:/var/roflfaucet-data/logs/sync-daemon.log
StandardError=append:/var/roflfaucet-data/logs/sync-daemon-error.log

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
