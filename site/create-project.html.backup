    <script>
        class ProjectCreationForm {
            constructor() {
                this.currentUser = null;
                this.draftProjectId = null;
                this.init();
            }
            
            async init() {
                // Check authentication and role
                this.currentUser = getValidUsername();
                if (!this.currentUser) {
                    window.location.href = 'profile.html';
                    return;
                }
                
                // Temporarily disabled for testing - allow all authenticated users
                // const userRole = await this.getUserRole();
                // if (userRole !== 'recipient' && userRole !== 'admin') {
                //     document.getElementById('accessDenied').style.display = 'block';
                //     return;
                // }
                
                // Create draft project to reserve project ID
                await this.createDraftProject();
                
                // Show the form
                document.querySelector('.recipient-only').style.display = 'block';
                
                // Auto-fill recipient name with logged in user
                document.getElementById('recipientName').value = this.currentUser;
                
                // Initialize form features
                this.setupPreview();
                this.setupFormSubmission();
                this.setupCurrencyConverter();
                this.setupImageUpload();
            }
            
            async createDraftProject() {
                try {
                    const draftData = {
                        action: 'create_project',
                        username: this.currentUser,
                        title: 'New Project (In Progress)',
                        description: 'Project details being added...',
                        full_description: '<p>Project description being prepared...</p>',
                        target_amount: 1000,
                        recipient_name: this.currentUser,
                        lightning_address: 'placeholder@example.com',
                        category: 'General'
                    };
                    
                    const response = await fetch('/api/project-management-api-v2.php', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(draftData)
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        this.draftProjectId = result.project_id;
                        console.log('Project created with ID:', this.draftProjectId);
                    } else {
                        console.error('Failed to create project:', result.error);
                    }
                } catch (error) {
                    console.error('Project creation error:', error);
                }
            }
            
            async getUserRole() {
                try {
                    const response = await fetch('/api/get-user-role.php', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ username: this.currentUser })
                    });
                    const data = await response.json();
                    return data.role || 'member';
                } catch (error) {
                    console.error('Failed to get user role:', error);
                    return 'member';
                }
            }
            
            setupPreview() {
                const form = document.getElementById('projectForm');
                const inputs = form.querySelectorAll('input, textarea, select');
                
                inputs.forEach(input => {
                    input.addEventListener('input', () => this.updatePreview());
                });
                
                this.updatePreview();
            }
            
            updatePreview() {
                const title = document.getElementById('projectTitle').value || 'Your Project Title';
                const amount = document.getElementById('targetAmount').value || '0';
                const recipient = document.getElementById('recipientName').value || 'Your name';
                const description = document.getElementById('shortDescription').value || 'Your project description will appear here...';
                
                document.getElementById('previewTitle').textContent = title;
                document.getElementById('previewAmount').textContent = parseInt(amount).toLocaleString();
                document.getElementById('previewRecipient').textContent = recipient;
                document.getElementById('previewDescription').textContent = description;
            }
            
            setupCurrencyConverter() {
                document.getElementById('targetAmount').addEventListener('input', (e) => {
                    const sats = parseInt(e.target.value) || 0;
                    const usd = (sats * 0.0007).toFixed(2); // Approximate conversion
                    document.getElementById('usdEstimate').textContent = `‚âà $${usd}`;
                });
            }
            
            setupFormSubmission() {
                document.getElementById('projectForm').addEventListener('submit', async (e) => {
                    e.preventDefault();
                    await this.submitProject();
                });
            }
            
            setupImageUpload() {
                this.pendingImageUpload = null;
                
                // Handle file input change
                document.getElementById('projectImage').addEventListener('change', (e) => {
                    this.handleImageUpload(e);
                });
                
                // Handle remove image button
                document.getElementById('removeImageBtn').addEventListener('click', () => {
                    this.removeImage();
                });
            }
            
            async handleImageUpload(event) {
                const file = event.target.files[0];
                if (file) {
                    // Validate file size (max 5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('Image must be smaller than 5MB');
                        return;
                    }
                    
                    // Validate file type (JPG only)
                    if (!file.type.match(/image\/(jpeg|jpg)/)) {
                        alert('Please select a JPG image file');
                        return;
                    }
                    
                    // Show preview
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        const previewImg = document.getElementById('previewImg');
                        const imagePreview = document.getElementById('imagePreview');
                        
                        previewImg.src = e.target.result;
                        imagePreview.style.display = 'block';
                    };
                    reader.readAsDataURL(file);
                    
                    // Store file for upload when saving
                    this.pendingImageUpload = file;
                }
            }
            
            removeImage() {
                // Clear the file input
                document.getElementById('projectImage').value = '';
                
                // Hide preview
                document.getElementById('imagePreview').style.display = 'none';
                
                // Clear pending upload
                this.pendingImageUpload = null;
            }
            
            async submitProject() {
                const form = document.getElementById('projectForm');
                const formData = new FormData(form);
                
                // Handle image upload first if there is one
                let imageUrl = '';
                if (this.pendingImageUpload) {
                    this.showStatus('üìé Uploading image...', 'info');
                    imageUrl = await this.uploadImage(this.pendingImageUpload);
                    if (!imageUrl) {
                        this.showStatus('‚ùå Image upload failed', 'error');
                        return;
                    }
                }
                
                // Additional validation
                const lightningAddress = formData.get('lightning_address');
                if (!lightningAddress.endsWith('@coinos.io')) {
                    this.showStatus('‚ùå Lightning address must be a @coinos.io address', 'error');
                    return;
                }
                
                const location = formData.get('location');
                if (!location || location.trim().length === 0) {
                    this.showStatus('‚ùå Location is required', 'error');
                    return;
                }
                
                const projectData = {
                    action: 'update_project',
                    project_id: this.draftProjectId, // Use the reserved project ID
                    username: this.currentUser,
                    title: formData.get('title'),
                    description: formData.get('short_description'),
                    full_description: document.getElementById('fullDescription').innerHTML || '<p>Full project description...</p>',
                    target_amount: parseInt(formData.get('target_amount')),
                    recipient_name: this.currentUser, // Use current user as recipient
                    lightning_address: lightningAddress,
                    category: formData.get('category') || 'General',
                    location: location.trim(),
                    website_url: formData.get('website_url') || '',
                    main_image: imageUrl // Include uploaded image URL
                };
                
                this.showStatus('Creating project...', 'info');
                
                try {
                    const response = await fetch('/api/project-management-api-v2.php', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(projectData)
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        const message = `‚úÖ Project created successfully!<br>
                                        üìÅ Project ID: ${result.project_id}<br>
                                        üìÑ Filename: ${result.filename}<br>
                                        ‚è≥ Status: Awaiting admin approval<br><br>
                                        <a href="profile.html" style="color: #155724; font-weight: bold; text-decoration: underline;">üë§ View in My Projects ‚Üí</a>`;
                        this.showStatus(message, 'success');
                        // Keep form data so user can create similar projects or make adjustments
                        // this.updatePreview();
                    } else {
                        this.showStatus('‚ùå Error: ' + (result.error || 'Unknown error'), 'error');
                    }
                } catch (error) {
                    console.error('Submission error:', error);
                    this.showStatus('‚ùå Failed to create project. Please try again.', 'error');
                }
            }
            
            // Upload image to server
            async uploadImage(file) {
                try {
                    if (!this.draftProjectId) {
                        console.error('No draft project ID available');
                        return null;
                    }
                    
                    console.log('Uploading image for project ID:', this.draftProjectId);
                    
                    const uploadFormData = new FormData();
                    uploadFormData.append('image', file);
                    // Use the reserved draft project ID
                    uploadFormData.append('project_id', this.draftProjectId);
                    
                    const response = await fetch('/api/upload-project-image.php', {
                        method: 'POST',
                        body: uploadFormData
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        return result.image_url;
                    } else {
                        console.error('Upload error:', result.error);
                        return null;
                    }
                } catch (error) {
                    console.error('Upload failed:', error);
                    return null;
                }
            }
            
            showStatus(message, type) {
                const statusEl = document.getElementById('statusMessage');
                statusEl.innerHTML = message; // Use innerHTML to allow links
                statusEl.className = `status-message status-${type}`;
                statusEl.style.display = 'block';
                
                // Don't auto-hide success messages so links stay visible
            }
        }
        
        // Initialize when DOM is ready
        document.addEventListener('DOMContentLoaded', () => {
            new ProjectCreationForm();
        });
    </script>
</body>
